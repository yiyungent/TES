@using Domain
@using WebUI.Extensions
@model ClazzInfo
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminContent.cshtml";
}

<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">班级 - 详细</h3>
	</div>
	<form>
		<div class="box-body">
			<div class="form-group">
				@Html.LabelFor(m => m.ClazzCode)
				@Html.TextBoxFor(m => m.ClazzCode, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				<label>班级学生人数</label>
				<input class="form-control" type="text" value="@Model.StudentCount()" disabled />
			</div>
		</div>
		<div class="box-footer">
			<div class="btn-group">
				<a class="btn btn-default" href="javascript:history.go(-1);">返回</a>
			</div>
		</div>
	</form>
</div>
