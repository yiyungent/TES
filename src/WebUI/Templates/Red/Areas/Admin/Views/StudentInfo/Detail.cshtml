@using Domain
@using WebUI.Extensions
@model StudentInfo
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminContent.cshtml";
}

<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">详细</h3>
	</div>
	<form>
		<div class="box-body">
			<div class="form-group">
				@Html.LabelFor(m => m.ID)
				@Html.TextBoxFor(m => m.ID, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Name)
				@Html.TextBoxFor(m => m.Name, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.StudentCode)
				@Html.TextBoxFor(m => m.StudentCode, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ClazzInfo.ClazzCode)
				@Html.TextBoxFor(m => m.ClazzInfo.ClazzCode, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				<label>绑定用户(用户名)</label>
				@Html.TextBox("UserName", Model.GetBindUser()?.UserName ?? "未绑定用户", new { @class = "form-control", disabled = "disabled"})
			</div>
		</div>
		<div class="box-footer">
			<div class="btn-group">
				<a class="btn btn-default" href="javascript:history.go(-1);">返回</a>
			</div>
		</div>
	</form>
</div>
