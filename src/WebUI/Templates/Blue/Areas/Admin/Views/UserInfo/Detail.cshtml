@using Domain
@using WebUI.Extensions
@model UserInfo
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminContent.cshtml";
}

<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">详细</h3>
	</div>
	<form>
		<div class="box-body">
			<div class="form-group">
				@Html.LabelFor(m => m.ID)
				@Html.TextBoxFor(m => m.ID, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.UserName)
				@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Name)
				@Html.TextBoxFor(m => m.Name, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.RegTime)
				@Html.TextBoxFor(m => m.RegTime, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Email)
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Description)
				@Html.TextBoxFor(m => m.Description, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.RoleInfoList)
				@{ string[] colors = { "warning", "primary", "danger", "default" }; }
				@for (int i = 0; i < Model.RoleInfoList.Count; i++)
				{
					if (Model.RoleInfoList[i].Name == "教师")
					{
						<span class="label label-success">@Model.RoleInfoList[i].Name</span>
					}
					else if (Model.RoleInfoList[i].Name == "学生")
					{
						<span class="label label-info">@Model.RoleInfoList[i].Name</span>
					}
					else
					{
						<span class="label label-@colors[i % colors.Length]">@Model.RoleInfoList[i].Name</span>
					}
				}
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Status)
				@switch (Model.Status)
				{
					case 0:
						<span class="label label-info">正常</span>
						break;
					case 1:
						<span class="label label-info">禁用</span>
						break; ;
					default:
						<span class="label label-info">未知</span>
						break;
				}
			</div>
		</div>
		<div class="box-footer">
			<div class="btn-group">
				<a class="btn btn-default" href="javascript:history.go(-1);">返回</a>
			</div>
		</div>
	</form>
</div>
