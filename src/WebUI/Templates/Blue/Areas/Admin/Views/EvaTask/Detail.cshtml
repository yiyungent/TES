@using Domain
@using WebUI.Extensions
@model EvaTask
@{
	Layout = "~/Areas/Admin/Views/Shared/_AdminContent.cshtml";
}

<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">详细</h3>
	</div>
	<form>
		<div class="box-body">
			<div class="form-group">
				@Html.LabelFor(m => m.ID)
				@Html.TextBoxFor(m => m.ID, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Name)
				@Html.TextBoxFor(m => m.Name, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.EvaTaskCode)
				@Html.TextBoxFor(m => m.EvaTaskCode, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.StartDate)
				@Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.EndDate)
				@Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", disabled = "disabled" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Status)
				@switch (Model.Status)
				{
					case 0:
						<span class="label label-info">@Model.Status.ToEvaTaskStatus()</span>
						break;
					case 1:
						<span class="label label-info">@Model.Status.ToEvaTaskStatus()</span>
						break;
					case 2:
						<span class="label label-info">@Model.Status.ToEvaTaskStatus()</span>
						break;
					case 3:
						<span class="label label-info">@Model.Status.ToEvaTaskStatus()</span>
						break;
					default:
						<span class="label label-info">@Model.Status.ToEvaTaskStatus()</span>
						break;
				}
			</div>
		</div>
		<div class="box-footer">
			<div class="btn-group">
				<a class="btn btn-default" href="javascript:history.go(-1);">返回</a>
			</div>
		</div>
	</form>
</div>
