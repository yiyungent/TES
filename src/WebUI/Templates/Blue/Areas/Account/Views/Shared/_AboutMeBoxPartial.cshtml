@using Domain
@model UserInfo
@{
	Layout = null;
	string[] labelArrCssArr = { "label-danger", "label-success", "label-info", "label-warning", "label-primary" };
}

<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">关于我</h3>
	</div>
	<!-- /.box-header -->
	<div class="box-body">
		<strong><i class="fa fa-book margin-r-5"></i> Education</strong>

		<p class="text-muted">
			B.S. in Computer Science from the University of Tennessee at Knoxville
		</p>

		<hr>

		<strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

		<p class="text-muted">Malibu, California</p>

		<hr>

		<strong><i class="fa fa-pencil margin-r-5"></i> 角色</strong>

		<p>
			@for (int i = 0; i < Model.RoleInfoList.Count; i++)
			{
				<span class="label @labelArrCssArr[i % labelArrCssArr.Length]">@Model.RoleInfoList[i].Name</span>
			}
		</p>

		<hr>

		<strong><i class="fa fa-file-text-o margin-r-5"></i> 描述</strong>

		<p>@Model.Description</p>
	</div>
	<!-- /.box-body -->
</div>
